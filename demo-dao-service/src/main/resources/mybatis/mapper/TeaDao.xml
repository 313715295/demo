<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zwq.daoservice.dao.TeaDao">
    <select id="selectById" resultType="Tea">
        select * from tea where id = #{id}
    </select>

    <select id="listAll" resultType="Tea">
        select * from tea
    </select>

    <select id="selectStocks" resultType="int">
        select stocks from tea where id = #{id}
    </select>

    <select id="selectByName" resultType="Tea">
        select t.id,t.name from tea t where name = #{name}
    </select>

    <delete id="deleteById">
        delete from tea where id = #{id}
    </delete>

    <insert id="add" parameterType="Tea" keyProperty="id" useGeneratedKeys="true">
        insert IGNORE into tea (name,price,stocks,img) values (#{name},#{price},#{stocks},#{img})
    </insert>

    <update id="update" parameterType="Tea">
        update tea set price=#{price},stocks=#{stocks},img=#{img} where id=#{id}
    </update>

    <update id="updateStocksByList" parameterType="list">
        update tea set stocks = case
                <foreach collection="list" item="item">
                    when id = #{item.tea.id} then #{item.tea.stocks}
                </foreach>
                ELSE stocks
                end
    </update>
</mapper>